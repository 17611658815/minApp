/* tabar */
.tab-bar{  position: fixed;  width: 100%;  padding: 0px 2%;  background-color: #fff;box-shadow: 0 0 10rpx rgba(0,0,0,0.1);} 
.tab-bar text{font-size: 20rpx;}
.menu-item{  
  width: 20%;  
  float: left;  
  text-align: center;  
  padding-top: 8px; 
}  
.menu-item1{   width: 24%;   float: left;   text-align: center;  padding-top: 8px;  }  
