page {
  background: #eee;
}

.main {
  display: flex;
  align-items: flex-start;
}

.column {
  width: 50%;
}

.column_item {
  width: 350rpx;
  background: #fff;
  margin: 30rpx auto;
  box-shadow: 5rpx 5rpx 10rpx 0 rgba(0, 0, 0, 0.3);
}

.column_pic {
  display: block;
  width: 350rpx;
  height: 350rpx;
}

.hide {
  display: none;
}
