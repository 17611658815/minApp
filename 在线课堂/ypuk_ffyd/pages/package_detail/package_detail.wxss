@import "../../resource/wxParse/wxParse.wxss";

.packageThumb {
    height: 400rpx;
}

.packageThumbimg {
    width: 100%;
    height: 400rpx;
}

.packageInfo {
    background: #fff;
    padding: 20rpx 30rpx 10rpx;
}

.packageInfo .packageTitle {
    font-size: 36rpx;
}

.packageInfo .packageIntro {
    color: #787878;
    font-size: 13px;
    margin: 10rpx 0;
}

.packageInfo .packageBottom {
    color: #787878;
    font-size: 13px;
}

.packageContent {
    background: #fff;
    padding: 20rpx 40rpx;
    margin-bottom: 134rpx;
}

.packageContent .packageDesc {
    font-size: 14px;
    margin: 20rpx 0;
}

.packageArticle {
    margin-bottom: 20rpx;
}

.navTab {
    height: 100rpx;
    background: #fff;
    width: 100%;
    border-bottom: 1px solid #eee;
}

.navItem {
    display: inline-block;
    background: #fff;
    width: 30%;
    color: #777;
    text-align: center;
    font-size: 14px;
    margin: 0 10%;
    line-height: 47px;
}

.navSelected {
    border-bottom: 4px solid #3399ff;
    color: #000;
    font-weight: bold;
}

.packageBuy {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: #fff;
    box-shadow: 0 0 2px rgba(0,0,0,0.1);
    z-index: 100;
    font-size: 16px;
    padding: 20rpx;
}

.packageBuybtn {
    background: #3399ff;
    color: #fff;
    text-align: center;
    padding: 20rpx 0;
    border-radius: 10rpx;
    font-size: 14px;
}

.packageBuybtn.disable {
    background: #bbb;
}

.clear_fixed {
    height: 130rpx;
    width: 100%;
}
.cover {
    width: 100%;
    height: 100vh;
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    background: rgba(0,0,0,0.7);
    z-index: 998;
}
.cover .promotion {
    box-sizing: border-box;
    width: 580rpx;
    padding: 30rpx;
    background-color: #fff;
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translateX(-50%) translateY(-50%);
    z-index: 999;
    border-radius: 25rpx;
}

.cover .promotion .title {
    color: #444;
    font-size: 38rpx;
    text-align: center;
    font-weight: 800;
}

.cover .promotion .shequxinxi {
    display: flex;
    justify-content: space-between;
    margin-top: 30rpx;
}

.cover .promotion .shequ {
    flex: 1;
}

.cover .promotion .shequ view:first-child {
    color: #3399ff;
}

.cover .promotion .shequ view:nth-child(2) {
    font-size: 24rpx;
    color: #9D9B9D;
    margin-top: 3rpx;
}

.cover .promotion .tuan {
    width: 120rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-left: 10rpx;
}

.cover .promotion .tuan image {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
}

.cover .promotion .tuan view {
    font-size: 24rpx;
    color: grey;
    margin-top: 15rpx;
}

.cover .promotion .fulixinxi {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 70rpx;
}

.cover .promotion .fulixinxi image {
    width: 220rpx;
    height: 220rpx;
}

.cover .promotion .fulixinxi view {
    padding: 10rpx 60rpx;
    margin-top: 25rpx;
    color: #6D6D6D;
}

.cover .promotion .bottom {
    margin-top: 10rpx;
    /* display: flex; */
  
}

.cover .promotion .bottom view {
    flex: 1;
    padding: 20rpx 0;
    text-align: center;
    border-radius: 8rpx;
}

.cover .promotion .bottom view:first-child {
    margin-right: 15rpx;
    background: #EBEBEB;
    color: #6D6D6D;
}

.cover .promotion .bottom view:nth-child(2) {
    margin-left: 15rpx;
    background: #3399ff;
    color: #fff;
}
