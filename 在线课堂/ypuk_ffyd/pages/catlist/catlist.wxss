.regionSelect {
    font-size: 14px;
    background: #fff;
    box-shadow: 0 2px 5px -4px #777;
    margin-bottom: 20rpx;
}

.regionItem {
    float: left;
    text-align: center;
    width: 50%;
    padding: 20rpx 0;
}

.regionItem .picker {
    color: #666;
}

.regionItem .picker .arrow {
    width: 26rpx;
    height: 26rpx;
    margin-left: 4rpx;
    vertical-align: top;
    margin-top: 10rpx;
    display: inline-block;
}

.pickerText {
    overflow: hidden;
    display: inline-block;
}

.searchBar {
    background: #fff;
    padding: 20rpx 0 60rpx;
    box-shadow: 0 3px 5px -4px #777;
}

.searchLayout {
    width: 560rpx;
    margin: 0 auto;
    position: relative;
}

.search_input {
    background: #f6f6f6;
    font-size: 14px;
    padding: 12rpx 40rpx 12rpx;
    color: #bfbfbf;
    border-radius: 14rpx;
}

.searchIco {
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    top: 18rpx;
    right: 30rpx;
    z-index: 99;
}
.cover {
    width: 100%;
    height: 100vh;
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    background: rgba(0,0,0,0.7);
    z-index: 998;
}
.cover .promotion {
    box-sizing: border-box;
    width: 580rpx;
    padding: 30rpx;
    background-color: #fff;
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translateX(-50%) translateY(-50%);
    z-index: 999;
    border-radius: 25rpx;
}

.cover .promotion .title {
    color: #444;
    font-size: 38rpx;
    text-align: center;
    font-weight: 800;
}

.cover .promotion .shequxinxi {
    display: flex;
    justify-content: space-between;
    margin-top: 30rpx;
}

.cover .promotion .shequ {
    flex: 1;
}

.cover .promotion .shequ view:first-child {
    color: #3399ff;
}

.cover .promotion .shequ view:nth-child(2) {
    font-size: 24rpx;
    color: #9D9B9D;
    margin-top: 3rpx;
}

.cover .promotion .tuan {
    width: 120rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-left: 10rpx;
}

.cover .promotion .tuan image {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
}

.cover .promotion .tuan view {
    font-size: 24rpx;
    color: grey;
    margin-top: 15rpx;
}

.cover .promotion .fulixinxi {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 70rpx;
}

.cover .promotion .fulixinxi image {
    width: 220rpx;
    height: 220rpx;
}

.cover .promotion .fulixinxi view {
    padding: 10rpx 60rpx;
    margin-top: 25rpx;
    color: #6D6D6D;
}

.cover .promotion .bottom {
    margin-top: 10rpx;
    /* display: flex; */
  
}

.cover .promotion .bottom view {
    flex: 1;
    padding: 20rpx 0;
    text-align: center;
    border-radius: 8rpx;
}

.cover .promotion .bottom view:first-child {
    margin-right: 15rpx;
    background: #EBEBEB;
    color: #6D6D6D;
}

.cover .promotion .bottom view:nth-child(2) {
    margin-left: 15rpx;
    background: #3399ff;
    color: #fff;
}
