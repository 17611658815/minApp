<!--index.wxml-->
<view class="container">
  <!-- 闪动 

  flash   //动画类型

  infinite // 连续执行
  
  
  -->
  <!-- <view bindtap="changes" class='content animated {{!index ? "tada":""}}'></view> -->
  <view bindtap='change' class='content animated bounce infinite'>弹跳</view>

  <view bindtap='change' class='content animated flash infinite'>闪烁</view>

  <view bindtap='change' class='content animated pulse infinite'>呼吸</view>

  <view bindtap='change' class='content animated rubberBand infinite'>橡皮筋</view>

  <view bindtap='change' class='content animated shake infinite'>摇晃1</view>

  <view bindtap='change' class='content animated headShake infinite'>摇晃2</view>

  <!-- <view bindtap='change' class='content animated bounceInDown infinite'>滑入摇晃</view> -->
     
  <!-- 加载动画 -->
  <view class="container">
    <view id="loading" hidden="{{loadingHidden}}">
      <view id="loading-center">
        <view id="loading-center-absolute">
          <view class="object" id="object_one"></view>
          <view class="object" id="object_two"></view>
          <view class="object" id="object_three"></view>
          <view class="object" id="object_four"></view>
          <view class="object" id="object_five"></view>
          <view class="object" id="object_six"></view>
          <view class="object" id="object_seven"></view>
          <view class="object" id="object_eight"></view>
          <view class="object" id="object_big"></view>
        </view>
      </view>
    </view>
  </view>

</view>