movable-area {
    width: 100%;
    height: 800rpx;
    background-color: #eee;
}

movable-view {
    border: 2px solid rgba(255, 255, 255, 0.5);
    position: relative;
}

.cat {
    width: 100%;
}

.scale-icon {
    position: absolute;
    right: -15px;
    top: -15px;
    color: #fff;
    background: rgba(0, 0, 0, 0.2);
    width: 24px;
    height: 24px;
    padding: 6px;
    border-radius: 50%;
}

.rotate-icon{
    position: absolute;
    right: -15px;
    bottom: -15px;
    color: #fff;
    background: rgba(0, 0, 0, 0.2);
    width: 24px;
    height: 24px;
    padding: 6px;
    border-radius: 50%;
}
